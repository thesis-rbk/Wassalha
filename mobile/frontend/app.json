{
  "expo": {
    "name": "frontend",
    "permissions": ["camera"],
    "slug": "wassalha",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.wassalha.yourapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.yourapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes.",
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show your position on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to show your position on the map even when the app is in the background."
      }
    },
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "redirectUri": "https://auth.expo.io/@mrsadok/wassalha",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.wassalha.yourapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "extra": {
      "GOOGLE_MAPS_KEY": "your-google-maps-key"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow this app to use the camera to scan QR codes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload images.",
          "cameraPermission": "The app needs access to your camera to take photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/fonts/*"
    ],
    "fonts": [
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Light.ttf",
        "family": "Inter_28pt-Light"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Italic.ttf",
        "family": "Inter_28pt-Italic"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-MediumItalic.ttf",
        "family": "Inter_28pt-MediumItalic"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Thin.ttf",
        "family": "Inter_28pt-Thin"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Black.ttf",
        "family": "Inter_28pt-Black"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Bold.ttf",
        "family": "Inter_28pt-Bold"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Medium.ttf",
        "family": "Inter_28pt-Medium"
      },
      {
        "asset": "assets/fonts/android/inter/Inter_28pt-Regular.ttf",
        "family": "Inter_28pt-Regular"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Bold.otf",
        "family": "SFPro-Display-Bold"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Black.otf",
        "family": "SFPro-Display-Black"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Heavy.otf",
        "family": "SFPro-Display-Heavy"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Light.otf",
        "family": "SFPro-Display-Light"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Medium.otf",
        "family": "SFPro-Display-Medium"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-MediumItalic.otf",
        "family": "SFPro-Display-MediumItalic"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Regular.otf",
        "family": "SFPro-Display-Regular"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Semibold.otf",
        "family": "SFPro-Display-Semibold"
      },
      {
        "asset": "assets/fonts/ios/sf-pro/SFPro-Display-Thin.otf",
        "family": "SFPro-Display-Thin"
      }
    ]
  }
}